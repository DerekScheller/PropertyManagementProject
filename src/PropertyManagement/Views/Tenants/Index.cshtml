            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ForwardingAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
